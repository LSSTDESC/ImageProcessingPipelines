    <!-- ##################### COADD ########################## -->
    <task name="task_coadd" type="LSST">
      
      <process name="setup_patch" site="${JOBSITE}">
        <notation> note </notation>
        <variables>
          <var name="streamID">${format(pipeline.stream, "%s")}</var>
