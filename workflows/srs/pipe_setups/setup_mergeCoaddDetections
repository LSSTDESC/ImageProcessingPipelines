pipelineSet FILTERS ${FILTERS}
pipelineSet DM_RELEASE ${DM_RELEASE}
pipelineSet DM_SETUP ${DM_SETUP}
pipelineSet CONFIGS_LOCATION ${CONFIGS_LOCATION}
pipelineSet OUTPUT_DATA_DIR ${OUTPUT_DATA_DIR}