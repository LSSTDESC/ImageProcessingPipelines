#!/bin/bash

# Ready to ingest
if [[ $SITE == "NERSC" ]]
then
  mkdir -p ${NERSC_DRP_OUTPUT}
  cp ${SCRIPT_LOCATION}/../dm_configs/_mapper ${NERSC_DRP_OUTPUT}/
else
  # Make sure the output directory exists
  mkdir -p ${IN_DIR}
  # If the output directory does not contain a mapper file, create one
  cp ${SCRIPT_LOCATION}/../dm_configs/_mapper ${IN_DIR}/
fi
