      ]]>
      </script>
      <depends>
        <after process="setup_forcedPhotCcd"/>
      </depends>
      <createsSubtasks>
	<subtask>forcedPhotCcdFilter</subtask>
      </createsSubtasks>	
    </process>

    <!-- forcedPhotCoadd -->
    <!--   setup -->
    <process name="setup_forcedPhotCoadd" site="${JOBSITE}">
      <notation>Setup for forcedPhotCoadd</notation>
      <job maxCPU="${MAXCPU}" batchOptions="${BATCH_OPTIONS}"
	   executable="${SETUP_LOCATION}/${BATCH_NAME}"/>
      <depends>
        <after process="mergeCoaddMeasurementsFilter.runMergeCoaddMeasurements"/>
      </depends>
    </process>
    <!--   launch jobs -->
    <process name="forcedPhotCoadd" site="${JOBSITE}">
      <notation>Run forcedPhotCoadd for all filter</notation>
      <script><![CDATA[
      execfile("%s/%s" % (SLAC_SETUP_LOCATION, SCRIPT_NAME))
      run_forcedPhotCoadd()
      ]]>
      </script>
      <depends>
        <after process="setup_forcedPhotCoadd"/>
      </depends>
      <createsSubtasks>
	<subtask>forcedPhotCoaddFilter</subtask>
      </createsSubtasks>	
    </process>
    
    <!-- Check points -->

    <!-- makeSkyMap -->
    <process name="checkpoint_SkyMap" site="${JOBSITE}">
      <notation>Check point</notation>
      <variables>
	<var name="checkpoint">makeSkyMap</var>
      </variables>
      <job batchOptions="${BATCH_OPTIONS}"
	   executable="${SETUP_LOCATION}/checkpoint"/>
    </process>


    <!--   Subtasks -->
    <!--   Subtask to run processEimage -->
    <task name="processEimageFilter" type="LSST">
      <process name="runProcessEimage" site="${JOBSITE}">
	<variables>
	  <var name="streamID">${format(pipeline.stream, "%01d")}</var>
	</variables>
	<job batchOptions="${BATCH_OPTIONS} ${EXTRA_OPTIONS_2}"
	     executable="${CUR_SCRIPT}"/>
      </process>                
    </task>
    <!--   Subtask to run makeFpSummary  -->
    <task name="makeFpSummaryFilter" type="LSST">
      <process name="runMakeFpSummary" site="${JOBSITE}">
    <variables>
      <var name="streamID">${format(pipeline.stream, "%01d")}</var>
    </variables>
    <job batchOptions="${BATCH_OPTIONS}" 
         executable="${MAKEFP_SCRIPT}"/>
      </process>                
    </task>
    <task name="reportPatchesVisit" type="LSST">
      <process name="runReportPatches" site="${JOBSITE}">
	<variables>
	  <var name="streamID">${format(pipeline.stream, "%01d")}</var>
	</variables>
        <job batchOptions="${BATCH_OPTIONS} ${EXTRA_OPTIONS_1}"
	     executable="${CUR_SCRIPT}"/>
      </process>                
    </task>
    <!--   Subtask to run jointcal -->
    <task name="jointcalFilter" type="LSST">
      <process name="runJointcal" site="${JOBSITE}">
	<variables>
	  <var name="streamID">${format(pipeline.stream, "%01d")}</var>
	</variables>
        <job batchOptions="${BATCH_OPTIONS} ${EXTRA_OPTIONS_1}"
	     executable="${CUR_SCRIPT}"/>
      </process>                
    </task>
    <!--   Subtask to run jointcalCoadd -->
    <task name="jointcalCoaddFilter" type="LSST">
      <process name="runJointcalCoadd" site="${JOBSITE}">
	<variables>
	  <var name="streamID">${format(pipeline.stream, "%01d")}</var>
	</variables>
        <job batchOptions="${BATCH_OPTIONS} ${EXTRA_OPTIONS_0}"
	     executable="${CUR_SCRIPT}"/>
      </process>                
    </task>
    <!--   Subtask to run assembleCoadd -->
