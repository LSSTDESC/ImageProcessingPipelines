# checkpoint
source ${SETUP_LOCATION}/checkpoint

# Make sur the work directory exists
mkdir -p ${WORK_DIR}/03-makeSkyMap
cd ${WORK_DIR}/03-makeSkyMap
ln -sfn ${WORK_DIR} pardir

# A specific config file is needed for the rings Sky Map
cp ${CONFIGS_LOCATION}/makeSkyMapConfig.py .

# Build the list of visits
createVisitLists.py ${IN_DIR}

# Build the list of tracts/patches for the rings sky map
runMakeSkyMap.py --output pardir/output -f ${FILTERS}
